@{
    ViewData["Title"] = "User Page";
}

@model List<TestCrud.Models.User>

<h1>User List</h1>
<div class="mb-3">
    <a href="@Url.Action("Create", "User")" class="btn btn-success">Create New User</a>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Action</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.user_id</td>
                    <td>@user.firstname</td>
                    <td>@user.lastname</td>
                    <td>
                        <a href="@Url.Action("edit", "User", new { id = user.user_id })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("delete", "User", new { id = user.user_id })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
